            <li>
                <%= link_to 'Register', user_registration_path, method: :create %>
            </li>
        <% else %>
            <li>
                <span>Welcome <%= current_user.username %></span>
            </li>
        <% end %>

        <%# will have to change class: %>
        <li>
            <% if user_signed_in? %>
                <%= link_to "Log Out", destroy_user_session_path, method: "delete", class: 'nav-link active' %>
            <% else %>
                <%= link_to "Log In", new_user_session_path, method: :create, class: 'nav-link active' %>
            <% end %>
        </li>
    </ul>
</nav>